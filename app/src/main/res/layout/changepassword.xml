<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="serif"
        android:text="Change password"
        android:textColor="@color/eggplant"
        android:textSize="45sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newPassTxtCP"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:background="@drawable/roundedcornerstext"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="  New password"
        android:inputType="textPassword"
        android:textColor="@color/eggplant"
        android:textColorHint="@color/eggplant"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <EditText
        android:id="@+id/confirmPassTxtCP"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:background="@drawable/roundedcornerstext"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="  Confirm new password"
        android:inputType="textPassword"
        android:textColor="@color/eggplant"
        android:textColorHint="@color/eggplant"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <EditText
        android:id="@+id/currentPassTxtCP"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:background="@drawable/roundedcornerstext"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="  Current password"
        android:inputType="textPassword"
        android:textColor="@color/eggplant"
        android:textColorHint="@color/eggplant"
        android:textSize="20sp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:id="@+id/updatePassBtnCP"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="475dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedcornersdark"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Update password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/forgotPassCP"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:gravity="center_horizontal"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:textSize="18sp"
        android:layout_marginTop="385dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>