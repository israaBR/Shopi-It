<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <EditText
        android:id="@+id/emailTxtLog"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedcornerstext"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="  enter your email"
        android:inputType="textEmailAddress"
        android:textColor="@color/eggplant"
        android:textColorHint="@color/eggplant"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passTxtLog"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:background="@drawable/roundedcornerstext"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:hint="  enter your password"
        android:inputType="textPassword"
        android:textColor="@color/eggplant"
        android:textColorHint="@color/eggplant"
        android:textSize="20sp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:id="@+id/loginBtnLog"
        android:layout_width="351dp"
        android:layout_height="61dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedcornersdark"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/rememberMeLog"
        android:layout_width="259dp"
        android:layout_height="61dp"
        android:text="Remember me"
        android:checked="false"
        android:textColor="@color/eggplant"
        android:textSize="18sp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp" />


    <TextView
        android:id="@+id/forgetPassLog"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="490dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:gravity="center_horizontal"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:textSize="18sp"
        android:layout_marginTop="570dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <TextView
        android:id="@+id/registerLog"
        android:layout_width="104dp"
        android:layout_height="67dp"
        android:gravity="center_horizontal"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/eggplant"
        android:textSize="18sp"
        android:layout_marginTop="570dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="50dp"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_horizontal"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/eggplant"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_horizontal"
        android:text=" back"
        android:textAlignment="center"
        android:textColor="@color/eggplant"
        android:textSize="35sp"
        android:textStyle="bold" />


</RelativeLayout>