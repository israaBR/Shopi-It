<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment"
    android:background="@color/white">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="66dp"
        android:fontFamily="serif"
        android:text="My profile"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="50dp"/>


    <Button
        android:id="@+id/personalInfoBtnProfile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="start"
        android:text="Personal info"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/eggplant"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/changePassBtnProfile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="start"
        android:text="Change password"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/eggplant"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/securityQuestionsBtnProfile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="start"
        android:text="Update security questions"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/eggplant"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logoutBtnProfile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="start"
        android:text="Logout"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/eggplant"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>